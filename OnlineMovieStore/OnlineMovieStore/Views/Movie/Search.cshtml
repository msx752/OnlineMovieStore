@model List<OnlineMovieStore.Data.Tables.Movie>
@{
    ViewData["Title"] = $"Search Result";
}

    <section class="searchResult" id="searchResult">
        <h2>@ViewData["Title"]</h2>
        <div class="row">
            @{
                foreach (var item in Model)
                {
                    <div class="col-sm-2 hvr-shadow-radial">
                                    <article class="card rounded">
                                        <header class="title-header">
                                            <h3 class="text-center">@(item.Title)</h3>
                                        </header>
                                        <a style="color:white;" asp-area="" asp-controller="Movie" asp-action="Detail" asp-route-id="@(item.Id)">
                                            <div class="card-block">
                                                <div class="img-card">
                                                    <img src="~/img/@(item.Id).png" alt="@(item.Title)" class="w-100" />
                                                    <div class="average-rating rounded">
                                                        @Html.DrawStars(item.Rating)
                                                    </div>
                                                    <div class="view-detail" style="display:none;">
                                                        <i class="fa fa-search fa-3x"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </article>
                    </div>
                }
            }
        </div>
    </section>


